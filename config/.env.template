# API Keys and Environment Variables Template
# Copy this file to .env and fill in your actual keys

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# WordPress API
WORDPRESS_URL=https://yourblog.com/xmlrpc.php
WORDPRESS_USERNAME=your_username
WORDPRESS_PASSWORD=your_password

# Ghost API (if using Ghost)
GHOST_URL=https://yourblog.ghost.io
GHOST_API_KEY=your_ghost_api_key

# Google Analytics (for analytics)
GA_TRACKING_ID=your_ga_tracking_id